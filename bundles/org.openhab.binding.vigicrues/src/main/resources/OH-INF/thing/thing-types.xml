<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="vigicrues"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="station">
		<label>Station</label>
		<description>Provides river level informations for this station</description>

		<channels>
			<channel id="height" typeId="height"/>
			<channel id="relative-height" typeId="gauge">
				<label>Relative Height</label>
				<description>Current height toward historical floods.</description>
			</channel>
			<channel id="flow" typeId="flow"/>
			<channel id="relative-flow" typeId="gauge">
				<label>Relative Flow</label>
				<description>Current flow toward historic floods.</description>
			</channel>
			<channel id="alert" typeId="alert-level"/>
			<channel id="short-comment" typeId="comment">
				<label>Short Description</label>
				<description>Brief description of the situation.</description>
			</channel>
			<channel id="comment" typeId="comment"/>
			<channel id="observation-time" typeId="observation-time"/>
		</channels>

		<representation-property>id</representation-property>

		<config-description>
			<parameter name="id" type="text" required="true">
				<label>Identifier</label>
				<description>Id of the station</description>
			</parameter>
			<parameter name="refresh" type="integer" min="1" required="true" unit="min">
				<label>Refresh Interval</label>
				<description>Specifies the refresh interval in minutes.</description>
				<default>30</default>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="vigieau">
		<label>Restrictions d'eau</label>
		<description>Provides water restriction informations</description>

		<channels>
			<channel id="alert" typeId="alert-vigie">
				<description>Niveau d'Alerte</description>
			</channel>
			<channel id="beginning-time" typeId="arret-date">
				<label>Début validité</label>
				<description>Heure de début de l'alerte</description>
			</channel>
			<channel id="ending-time" typeId="arret-date">
				<label>Fin validité</label>
				<description>Heure de fin de l'alerte</description>
			</channel>
			<channel id="arrete" typeId="comment">
				<label>Arrêté de Restriction</label>
			</channel>
			<channel id="cadre" typeId="comment">
				<label>Arrêté Cadre</label>
			</channel>
			<channel id="fountains" typeId="allowed-usage-fountains"/>
			<channel id="golfs" typeId="allowed-usage-golfs"/>
			<channel id="gardens" typeId="allowed-usage-gardens"/>
			<channel id="grass" typeId="allowed-usage-grass"/>
			<channel id="sports" typeId="allowed-usage-sports"/>
			<channel id="icpe" typeId="allowed-usage-icpe"/>
			<channel id="cultures" typeId="allowed-usage-cultures"/>
			<channel id="vehicles" typeId="allowed-usage-vehicles"/>
			<channel id="roofs" typeId="allowed-usage-roofs"/>
			<channel id="pools" typeId="allowed-usage-pools"/>
			<channel id="ponds" typeId="allowed-usage-ponds"/>
		</channels>

		<representation-property>location</representation-property>

		<config-description>
			<parameter name="refresh" type="integer" min="1">
				<label>Refresh Interval</label>
				<description>Specifies the refresh interval in hours.</description>
				<default>12</default>
			</parameter>
			<parameter name="waterType" type="text" required="true">
				<label>Water Type</label>
				<options>
					<option value="SUP">Superficielle</option>
					<option value="SOU">Souterraine</option>
					<option value="AEP">Potable</option>
				</options>
				<default>AEP</default>
			</parameter>
			<parameter name="profile" type="text" required="true">
				<label>Usage Kind</label>
				<options>
					<option value="PART">Particulier</option>
					<option value="ENTR">Entreprise</option>
					<option value="COLL">Collectivité</option>
					<option value="EXPL">Exploitation</option>
				</options>
				<default>PART</default>
			</parameter>
			<parameter name="location" type="text" required="true">
				<label>Location</label>
				<context>location</context>
				<description>Your geo coordinates separated with comma (e.g. "37.8,-122.4,177").</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="flow">
		<item-type>Number:VolumetricFlowRate</item-type>
		<label>Current Flow</label>
		<description>Current river flow</description>
		<category>flow</category>
		<state readOnly="true" pattern="%.2f %unit%"/>
	</channel-type>

	<channel-type id="allowed-usage-fountains">
		<item-type>Switch</item-type>
		<label>Alimentation des fontaines</label>
		<category>oh:mdi_fountain</category>
		<state readOnly="true"/>
	</channel-type>
	
    <channel-type id="allowed-usage-golfs">
        <item-type>Switch</item-type>
        <label>Arrosage des golfs</label>
        <category>oh:mdi_golf</category>
        <state readOnly="true"/>
    </channel-type>
    
    <channel-type id="allowed-usage-gardens">
        <item-type>Switch</item-type>
        <label>Arrosage des jardins potagers</label>
        <category>oh:mdi_watering-can</category>
        <state readOnly="true"/>
    </channel-type>
    
    <channel-type id="allowed-usage-grass">
        <item-type>Switch</item-type>
        <label>Arrosage des pelouses</label>
        <category>oh:mdi_sprinkler-variant</category>
        <state readOnly="true"/>
    </channel-type>
    
    <channel-type id="allowed-usage-sports">
        <item-type>Switch</item-type>
        <label>Arrosage des terrains de sport</label>
        <category>oh:mdi_soccer</category>
        <state readOnly="true"/>
    </channel-type>
    
    <channel-type id="allowed-usage-roofs">
        <item-type>Switch</item-type>
        <label>Lavage des toitures, façades</label>
        <category>oh:mdi_home-roof</category>
        <state readOnly="true"/>
    </channel-type>
    
    <channel-type id="allowed-usage-pools">
        <item-type>Switch</item-type>
        <label>Vidange et remplissage des piscines</label>
        <category>oh:mdi_pool</category>
        <state readOnly="true"/>
    </channel-type>
        
    <channel-type id="allowed-usage-icpe">
        <item-type>Switch</item-type>
        <label>Restriction spécifique</label>
        <category>oh:mdi_account-alert</category>
        <state readOnly="true"/>
    </channel-type>
    
    <channel-type id="allowed-usage-cultures">
        <item-type>Switch</item-type>
        <label>Irrigation par aspersion des cultures</label>
        <category>oh:mdi_account-alert</category>
        <state readOnly="true"/>
    </channel-type>
     
    <channel-type id="allowed-usage-vehicles">
        <item-type>Switch</item-type>
        <label>Lavage des véhicules</label>
        <category>oh:mdi_car-wash</category>
        <state readOnly="true"/>
    </channel-type>
       
    <channel-type id="allowed-usage-ponds">
        <item-type>Switch</item-type>
        <label>Remplissage/Vidange des plans d'eau</label>
        <category>oh:mdi_waves</category>
        <state readOnly="true"/>
    </channel-type>
         
	<channel-type id="observation-time">
		<item-type>DateTime</item-type>
		<label>Observation Time</label>
		<description>Observation date and time</description>
		<category>time</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="arret-date">
		<item-type>DateTime</item-type>
		<label>Date of the Arret</label>
		<category>time</category>
		<state readOnly="true" pattern="%1$tY-%1$tm-%1$td"/>
	</channel-type>

	<channel-type id="height">
		<item-type>Number:Length</item-type>
		<label>Height</label>
		<description>Water level in the river</description>
		<category>flowpipe</category>
		<tags>
			<tag>Measurement</tag>
			<tag>Level</tag>
		</tags>
		<state readOnly="true" pattern="%.2f %unit%"/>
	</channel-type>

	<channel-type id="gauge">
		<item-type>Number:Dimensionless</item-type>
		<label>Relative Measure</label>
		<state readOnly="true" pattern="%.2f %unit%"/>
	</channel-type>

	<channel-type id="alert-level">
		<item-type>Number</item-type>
		<label>Alert</label>
		<category>oh:vigicrues:crue</category>
		<tags>
			<tag>Alarm</tag>
			<tag>Water</tag>
		</tags>
		<state readOnly="true">
			<options>
				<option value="0">Green</option>
				<option value="1">Yellow</option>
				<option value="2">Orange</option>
				<option value="3">Red</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="alert-vigie">
		<item-type>Number</item-type>
		<label>Alert</label>
        <category>oh:vigicrues:vigieau</category>
  		<tags>
			<tag>Alarm</tag>
			<tag>Water</tag>
		</tags>
		<state readOnly="true">
			<options>
				<option value="0">Pas de restriction</option>
				<option value="1">Vigilance</option>
				<option value="2">Alerte</option>
				<option value="3">Crise</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="comment">
		<item-type>String</item-type>
		<label>Comment</label>
		<description>Detailed comment</description>
		<category>text</category>
		<state readOnly="true" pattern="%s"/>
	</channel-type>
</thing:thing-descriptions>
